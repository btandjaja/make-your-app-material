<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="widthMatchParentHeightWarpContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="widthMatchParentHeightMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="widthWrapContentHeightWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textFont" parent="widthMatchParentHeightWarpContent">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- detail fragment -->
    <!-- AppBar-->
    <style name="AppBarStyle" parent="widthMatchParentHeightWarpContent">
        <item name="android:elevation">@dimen/appBar_elevation</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- fragment toolBar popupTheme-->
    <style name="popupTheme" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- linearlayout -->
    <style name="linearLayout" parent="widthMatchParentHeightWarpContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
    </style>

    <!-- textView title -->
    <style name="tvTitle" parent="textFont">
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_title_bottom_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- textView articleByLine -->
    <style name="tvDateAndAuthor" parent="textFont">
        <item name="android:textColor">@color/ltgray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- image photo-->
    <style name="imagePhoto" parent="widthMatchParentHeightMatchParent">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- recyclerView article body -->
    <style name="fragmentRecyclerView" parent="widthMatchParentHeightWarpContent">
        <item name="android:background">@color/theme_accent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:paddingTop">@dimen/paddingTop_24dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- fab -->
    <style name="fab_style" parent="widthWrapContentHeightWrapContent">
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:backgroundTint">@color/theme_primary_dark</item>
        <item name="android:contentDescription">@string/action_share</item>
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>

    <!-- article detail -->
    <!-- view -->
    <style name="view" parent="widthMatchParentHeightMatchParent">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- FrameLayout -->
    <style name="articleDetailFrameLayout" parent="widthMatchParentHeightMatchParent">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- article list activity -->
    <!-- article list appBar -->
    <style name="articleListAppBar" parent="widthMatchParentHeightWarpContent">
        <item name="android:elevation">@dimen/appBar_elevation</item>
    </style>
    <!-- toolbar -->
    <style name="toolbar_article_list" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- manifest -->
    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- list_item_article -->
    <style name="book_title" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="author_on_card" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/card_text_padding_16dp</item>
        <item name="android:paddingRight">@dimen/card_text_padding_16dp</item>
        <item name="android:paddingBottom">@dimen/card_text_padding_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">@integer/max_lines_2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
